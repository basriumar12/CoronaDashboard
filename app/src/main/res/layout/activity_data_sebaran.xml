<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".utama.ui.data_sebaran.DataSebaranActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Data Seluruh Provinsi Di Indonesia"
        android:textColor="@color/colorSoftBlack"
        android:textSize="18sp"
        tools:targetApi="jelly_bean" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bg_map"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorTransparentBlack" />

            <Button
                android:id="@+id/btn_seluruh_provinsi"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_map"
                android:text="Lihat Detail"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Data Seluruh Negara"
        android:textColor="@color/colorSoftBlack"
        android:textSize="18sp"
        tools:targetApi="jelly_bean" />

    <androidx.cardview.widget.CardView
        android:id="@+id/result_cv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bg_map"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorTransparentBlack" />

            <Button
                android:id="@+id/btn_seluruh_negara"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_map"
                android:text="Lihat Detail"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Data Khusus Provinsi Gorontalo"
        android:textColor="@color/colorSoftBlack"
        android:textSize="18sp"
        tools:targetApi="jelly_bean" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bg_map"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorTransparentBlack" />

            <Button
                android:id="@+id/btn_provinsi_gorontalo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_map"
                android:text="Lihat Detail"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>