<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".utama.ui.fragment.map.MapFragment">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">



     <ImageView
         android:src="@drawable/bg_half_corner_two"
         android:layout_width="match_parent"
         android:layout_height="170dp"/>
     <TextView
         android:text="Bantuan"
         android:id="@+id/tv_bantuan"
         android:fontFamily="@font/poppinsbold"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="50dp"
         android:textSize="22sp"
         android:textColor="@android:color/white"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="20dp"
         tools:targetApi="jelly_bean" />
     <TextView
         android:text="Hi Bantuan Anda sangat membantu \nuntuk yang terkena dampak Covid-19."
         android:layout_below="@+id/tv_bantuan"
         android:fontFamily="@font/roboto"
         android:layout_marginLeft="20dp"
         android:textSize="18sp"
         android:textColor="@android:color/white"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="20dp"
         tools:targetApi="jelly_bean" />
     <ImageView
         android:layout_marginTop="20dp"
         android:layout_marginRight="20dp"
         android:layout_alignParentRight="true"
         app:srcCompat="@drawable/ic_help_black_24dp"
         android:layout_width="80dp"
         android:layout_height="80dp"/>


     <LinearLayout
         android:orientation="vertical"
         android:background="@color/colorLightGray"
         android:layout_marginTop="220dp"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <androidx.cardview.widget.CardView
             android:id="@+id/parent_call"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_margin="5dp"
             app:cardBackgroundColor="@android:color/white"
             app:cardCornerRadius="15dp"
             app:cardElevation="5dp">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <RelativeLayout
                     android:id="@+id/row_image"
                     android:layout_centerVertical="true"
                     android:layout_margin="10dp"
                     android:layout_width="60dp"
                     android:layout_height="60dp">

                     <de.hdodenhof.circleimageview.CircleImageView
                         android:id="@+id/iv_bg_image"
                         android:visibility="gone"
                         android:src="@color/bgColorHotline"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         tools:ignore="ContentDescription" />

                     <ImageView
                         android:id="@+id/iv_row_image"
                         android:background="@drawable/ic_hotline"
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:layout_centerInParent="true"
                         android:layout_margin="10dp"
                         tools:ignore="ContentDescription" />

                 </RelativeLayout>

                 <TextView
                     android:id="@+id/tv_row_name"
                     android:gravity="center_vertical"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_toEndOf="@+id/row_image"
                     android:text="Hotline 119"
                     android:textColor="@android:color/black"
                     android:textSize="18sp"
                     android:layout_toRightOf="@+id/row_image"
                     tools:ignore="RtlSymmetry" />

                 <Button
                     android:id="@+id/btn_panggil"
                     android:text="PANGGIL"
                     android:background="@drawable/bg_green"
                     android:textColor="@android:color/white"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:layout_height="35dp"
                     android:layout_marginRight="10dp"
                     android:layout_centerVertical="true"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentRight="true"
                     android:layout_marginEnd="10dp" />

             </RelativeLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
            android:id="@+id/parent_bantu"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_margin="5dp"
             app:cardBackgroundColor="@android:color/white"
             app:cardCornerRadius="15dp"
             app:cardElevation="5dp">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <RelativeLayout
                     android:id="@+id/row_image2"
                     android:layout_centerVertical="true"
                     android:layout_margin="10dp"
                     android:layout_width="60dp"
                     android:layout_height="60dp">

                     <de.hdodenhof.circleimageview.CircleImageView
                         android:id="@+id/iv_bg_image2"
                         android:visibility="visible"
                         android:src="@color/bgColorHotline"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         tools:ignore="ContentDescription" />

                     <ImageView
                         android:id="@+id/iv_row_image2"
                         android:background="@drawable/ic_add_circle_black_24dp"
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:layout_centerInParent="true"
                         android:layout_margin="10dp"
                         tools:ignore="ContentDescription" />

                 </RelativeLayout>

                 <TextView
                     android:id="@+id/tv_row_name2"
                     android:gravity="center_vertical"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_toEndOf="@+id/row_image2"
                     android:text="Yuk Bantu Yang Terkena Dampak Covid19"
                     android:textColor="@android:color/black"
                     android:textSize="18sp"
                     android:layout_toRightOf="@+id/row_image2"
                     tools:ignore="RtlSymmetry" />



             </RelativeLayout>
         </androidx.cardview.widget.CardView>


     </LinearLayout>
 </RelativeLayout>

</androidx.core.widget.NestedScrollView>
