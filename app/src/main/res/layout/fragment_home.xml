<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_settings_black_24dp" />

            <TextView
                android:layout_toLeftOf="@+id/img_setting"
                android:id="@+id/tv_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="Loading...."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:targetApi="jelly_bean" />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_greeting"
                android:id="@+id/tv_cegah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Ayo Bersama-sama   \nKita Lawan Covid-19 "
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:targetApi="jelly_bean" />
            <TextView
                android:visibility="gone"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_cegah"
                android:id="@+id/tv_lokasi"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/fontfamily"
                android:text="Anda Berada Dilokasi Zona Merah \nSelalu berhati-hati. "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:targetApi="jelly_bean" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_greeting"
                app:srcCompat="@drawable/ic_sembuh_white"
                android:layout_toRightOf="@+id/tv_cegah"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="165dp"
                android:background="@drawable/bg_half_corner"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:animateLayoutChanges="false"
                    android:animationCache="false"
                    android:background="@drawable/bg_search"
                    app:hintEnabled="false">

                    <RelativeLayout
                        android:id="@+id/parent_indonesia_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ic_map"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/ic_map" />

                        <TextView
                            android:id="@+id/sp_register"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/ic_map"
                            android:layout_toRightOf="@+id/ic_map"
                            android:text="Indonesia"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />
                    </RelativeLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/update_kasus_corona"
                    android:textColor="@color/colorSoftBlack"
                    android:textSize="20sp"
                    tools:targetApi="jelly_bean" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/tv_last_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..." />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_lihat_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:drawableEnd="@drawable/ic_right"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:text="Lihat Detail"
                        android:textColor="@color/colorGreen">

                    </TextView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#ffff"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <include
                                layout="@layout/item_corona_sembuh"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <include
                                layout="@layout/item_corona_meninggal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1" />


                            <include
                                layout="@layout/item_corona_positif"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Check Diri anda, Klik 'Self Check' "
                    android:textColor="@color/colorSoftBlack"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/check" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/colorTransparentBlack" />

                        <Button
                            android:id="@+id/btn_seluruh_provinsi"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_map"
                            android:text="Self Check"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_seluruh_provinsi"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/check_up_jatim_covid_19"
                            android:textColor="@color/cfdialog_button_white_text_color" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Informasi dan Tips"
                        android:textColor="@color/colorSoftBlack"
                        android:textSize="16sp"
                        tools:targetApi="jelly_bean" />


                    <TextView
                        android:id="@+id/tv_lihat_semua_berita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_right"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:text="@string/lihat_semua"
                        android:textColor="@color/colorGreen"
                        android:textSize="16sp"
                        tools:targetApi="jelly_bean" />

                </LinearLayout>
                <include
                    android:visibility="gone"
                    layout="@layout/loading_home"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/loading_berita"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_berita" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Video"
                        android:textColor="@color/colorSoftBlack"
                        android:textSize="16sp"
                        tools:targetApi="jelly_bean" />


                    <TextView
                        android:id="@+id/tv_lihat_semua_youtube"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_right"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:text="@string/lihat_semua"
                        android:textColor="@color/colorGreen"
                        android:textSize="16sp"
                        tools:targetApi="jelly_bean" />

                </LinearLayout>

                <include
                    android:visibility="gone"
                    layout="@layout/loading_home"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/loading_youtube"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginBottom="30dp"
                    android:id="@+id/rv_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_berita" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
